<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/startBltSco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect_blt_sco"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/isBltScoOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/startBltSco"
        app:layout_constraintTop_toBottomOf="@id/startBltSco"/>

    <Button
        android:id="@+id/stopBltSco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disconnect_blt_sco"
        app:layout_constraintStart_toStartOf="@id/startBltSco"
        app:layout_constraintEnd_toEndOf="@id/startBltSco"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/isBltScoOn"/>
</androidx.constraintlayout.widget.ConstraintLayout>